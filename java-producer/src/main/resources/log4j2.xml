<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="ConsoleLogger" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="AppLogger" fileName="./logs/producer/app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <File name="KafkaLogger" fileName="./logs/producer/kafka.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="com.pl.jellytech.yavaconf.kafka" level="DEBUG" additivity="false">
            <AppenderRef ref="ConsoleLogger"/>
            <AppenderRef ref="AppLogger"/>
        </Logger>

        <Logger name="org.apache.kafka.clients" level="DEBUG" additivity="false">
            <AppenderRef ref="KafkaLogger"/>
        </Logger>

        <Logger name="org.apache.kafka.clients.producer.ProducerConfig" level="DEBUG" additivity="false">
            <AppenderRef ref="KafkaLogger"/>
            <AppenderRef ref="ConsoleLogger"/>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="AppLogger"/>
        </Root>
    </Loggers>
</Configuration>